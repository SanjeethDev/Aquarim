<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Aquarim" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#293241</item>
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- Edit text box -->
    <style name="FancyEditable">
        <item name="android:background">@drawable/editable_background_dark</item>
        <item name="android:textColorHint">@color/hint_grey_dark</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Pop up window -->
    <style name="Theme.Aquarim.FancyPopUps">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name = "android:windowBackground" > @android:color/transparent</item>
        <item name="android:textColorHint">@color/hint_grey_dark</item>
    </style>

    <style name="FancyButtons">
        <item name="android:background">@drawable/button_background_dark</item>
    </style>
</resources>