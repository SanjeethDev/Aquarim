<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:id="@+id/main_water_level"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/water_tank_background"
        app:layout_constraintBottom_toTopOf="@id/main_action_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotationX="180">
            <View
                android:id="@+id/main_progress_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:backgroundTint="@color/highlight_blue"
                android:backgroundTintMode="src_atop"
                android:background="@drawable/water_tank_background"
                android:scaleY="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_action_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="15dp"
        android:focusable="true"
        android:background="@drawable/ic_add_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_record_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/transparent"
        app:layout_constraintStart_toEndOf="@id/main_water_level"
        app:layout_constraintBottom_toBottomOf="@id/main_water_level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_water_level" >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_record_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:text=""
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/main_action_button"
        app:layout_constraintTop_toBottomOf="@id/main_record_container"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:text=""
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/main_record_container"
        app:layout_constraintStart_toEndOf="@id/main_action_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>